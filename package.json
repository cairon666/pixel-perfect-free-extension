{
  "name": "pixel-perfect-free-extension",
  "version": "0.0.2",
  "private": true,
  "license": "MIT",
  "author": "Pixel Perfect Extension Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/cairon666/pixel-perfect-free-extension.git"
  },
  "keywords": [
    "browser-extension",
    "pixel-perfect",
    "ui-development",
    "frontend",
    "design-tools"
  ],
  "description": "Browser extension for real-time pixel-perfect interface comparison.",
  "type": "module",
  "scripts": {
    "---------------------------BUILD/DEV---------------------------": "",
    "dev": "vite",
    "clear": "rm -rf dist",
    "build": "npm run clear && npm run build:main && npm run build:content && npm run copy:css",
    "build:dev": "MINIFY=false npm run clear && npm run build:main && npm run build:content && npm run copy:css",
    "build:main": "vite build",
    "build:content": "cross-env BUILD_TARGET=content vite build",
    "copy:css": "cp dist/assets/popup-*.css dist/style.css",
    "preview": "vite preview",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:open": "cross-env ANALYZE=true ANALYZE_OPEN=true npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "---------------------------LINTING---------------------------": "",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "tsc": "npm run tsc:web && npm run tsc:node",
    "tsc:web": "tsc --noEmit -p tsconfig.web.json",
    "tsc:node": "tsc --noEmit -p tsconfig.node.json"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@reatom/core": "^3.10.1",
    "@reatom/npm-react": "^3.10.6",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.522.0",
    "postcss": "^8.5.6",
    "preact": "^10.26.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/chrome": "^0.0.242",
    "@types/node": "^24.0.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.14",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass-embedded": "^1.89.2",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  }
}
