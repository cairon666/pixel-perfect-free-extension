{
  "name": "pixel-perfect-free-extension",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Pixel Perfect Extension Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/cairon666/pixel-perfect-free-extension.git"
  },
  "keywords": [
    "browser-extension",
    "pixel-perfect",
    "ui-development",
    "frontend",
    "design-tools"
  ],
  "description": "Browser extension for real-time pixel-perfect interface comparison.",
  "type": "module",
  "scripts": {
    "---------------------------BUILD/DEV---------------------------": "",
    "dev": "vite",
    "clear": "rm -rf dist",
    "build": "npm run clear && npm run build:main && npm run build:content",
    "build:dev": "cross-env MINIFY=false npm run build",
    "build:main": "vite build",
    "build:content": "cross-env BUILD_TARGET=content vite build",
    "preview": "vite preview",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:open": "cross-env ANALYZE=true ANALYZE_OPEN=true npm run build",
    "---------------------------TESTS---------------------------": "",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:docker": "docker compose -f docker-compose.e2e.yml up --build --abort-on-container-exit",
    "test:e2e:docker:update": "docker compose -f docker-compose.e2e.yml run --rm playwright-tests npm run test:e2e -- --update-snapshots",
    "---------------------------LINTING---------------------------": "",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "tsc": "npm run tsc:web && npm run tsc:node && npm run tsc:e2e",
    "tsc:web": "tsc --noEmit -p tsconfig.web.json",
    "tsc:node": "tsc --noEmit -p tsconfig.node.json",
    "tsc:e2e": "tsc --noEmit -p tsconfig.e2e.json"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@reatom/core": "^3.10.1",
    "@reatom/hooks": "^3.6.1",
    "@reatom/npm-react": "^3.10.6",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.522.0",
    "postcss": "^8.5.6",
    "preact": "^10.26.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@playwright/test": "^1.53.1",
    "@testing-library/react": "^14.1.2",
    "@types/chrome": "^0.0.242",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.0.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.14",
    "playwright": "^1.53.1",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass-embedded": "^1.89.2",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vite-plugin-checker": "^0.9.3",
    "vitest": "^3.2.4"
  }
}
