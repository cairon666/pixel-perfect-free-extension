{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "types": ["vitest/globals", "chrome", "./src/env.d.ts"],
    "baseUrl": "./",
    "composite": true,
    "outDir": "./dist-types/web"
  },
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx", "src/**/*.test.tsx"],
  "exclude": ["dist", "node_modules", "*.config.ts", "*.config.js"]
}
